---
import { Experience } from "@/shared/model";
import { formatDate } from "@/lib/utils";

type Props = { data: Experience };
const { data } = Astro.props;
---

<li>
  <div class="timeline-middle">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
      fill="currentColor"
      class="h-5 w-5"
    >
      <path
        fill-rule="evenodd"
        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
        clip-rule="evenodd"></path>
    </svg>
  </div>
  <div class="timeline-end mb-10">
    <!-- date -->
    <div>
      <time class="font-mono italic" datetime={data.startDate}>
        {formatDate(data.startDate)}
      </time> -
      <time class="font-mono italic" datetime={data.endDate}>
        {formatDate(data.endDate)}
      </time>
    </div>
    <div class="max-w-2xl space-y-4 text-start">
      <div class="text-lg font-black">
        {data.role} - {data.company}
      </div>
      <ul>
        {data.description.map((item) => <li>- {item}</li>)}
      </ul>
      <div class="space-x-2">
        {
          data.skills.map((item) => (
            <span class="badge badge-ghost">{item}</span>
          ))
        }
      </div>
    </div>
  </div>
  <hr />
</li>
