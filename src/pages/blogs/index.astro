---
import BlogCard from "@/astro-components/BlogCard.astro";
import Base from "@/layouts/Base.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blogs");
---

<Base>
  <div class="container">
    <ul class="max-w-xl mx-auto">
      {
        posts.map((post) => (
          <li>
            <BlogCard post={post} />
          </li>
        ))
      }
    </ul>
  </div>
</Base>
