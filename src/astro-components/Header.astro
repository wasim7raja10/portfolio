---
import HeaderLink from "./HeaderLink.astro";
import { links } from "@/shared/data";
---

<!-- desktop -->
<header class="container fixed inset-x-0 top-0 z-50 mt-6 max-w-max">
  <nav class="mx-auto flex justify-between">
    <div>
      <!-- logo -->
    </div>

    <div
      class="flex items-center rounded-md border bg-secondary p-1 text-secondary-content"
    >
      {
        links.map((link) => (
          <HeaderLink href={link.href}>{link.text}</HeaderLink>
        ))
      }
    </div>
  </nav>
</header>
