---
import ProjectCard from "./ProjectCard.astro";
import SectionWrapper from "./SectionWrapper.astro";

import { projectData } from "@/shared/data";
---

<SectionWrapper sectionName="Projects">
  <ul
    class="timeline timeline-vertical timeline-snap-icon max-md:timeline-compact"
  >
    {
      projectData.projects.map((item, index) => (
        <ProjectCard data={item} index={index} />
      ))
    }
  </ul>
</SectionWrapper>
